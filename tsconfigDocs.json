{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "esModuleInterop": true,
        "typeRoots": []
    },
    "typedocOptions": {
        "mode": "file",
        "out": "docs",
        "target": "es6",
        "excludeProtected": true,
        "excludePrivate": true,
        "excludeExternals": true,
        "ignoreCompilerErrors": true
    }
}
